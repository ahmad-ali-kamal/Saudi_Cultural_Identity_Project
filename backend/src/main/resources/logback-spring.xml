<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Import Spring Boot's default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender - Default Spring Boot Format (Default, Dev, Test) -->
    <!-- Note: Structured arguments (keyValue) are stored but not displayed in text format -->
    <!-- They will be visible in production JSON logs -->
    <springProfile name="!prod">
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>

    <!-- Console Appender - JSON Format (Production) -->
    <springProfile name="prod">
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeContext>true</includeContext>
                <includeMdc>true</includeMdc>
                <includeStructuredArguments>true</includeStructuredArguments>
                <includeTags>true</includeTags>

                <!-- Custom fields -->
                <customFields>{"app":"saudiculture","environment":"production"}</customFields>

                <!-- Field names -->
                <fieldNames>
                    <timestamp>@timestamp</timestamp>
                    <message>message</message>
                    <logger>logger</logger>
                    <thread>thread</thread>
                    <level>level</level>
                    <levelValue>[ignore]</levelValue>
                </fieldNames>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE" />
        </root>
    </springProfile>

</configuration>
